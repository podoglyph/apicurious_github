=render partial: "/dashboard/profile"

.col-md-9
  .user-repo-info
    %ul.nav.nav-tabs
      %li.active
        %a{href: dashboard_path, role: 'presentation'}
          Overview
      %li
        %a{href: repos_path, role: 'presentation'}
          Repositories
          %span.badge
            =current_user.num_public_repos
      %li
        %a{href: starred_path, role: 'presentation'}
          Stars
          %span.badge
            =@star_count
      %li
        %a{href: followers_path, role: 'presentation'}
          Followers
          %span.badge
            =current_user.num_followers
      %li
        %a{href: following_path, role: 'presentation'}
          Following
          %span.badge
            =current_user.num_following

  =render partial: "/repos/repo_list"
